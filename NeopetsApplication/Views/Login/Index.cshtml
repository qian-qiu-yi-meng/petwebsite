<body>

    <div class="login-box">
        <h1>一梦网站登录</h1>
        <form method="post" action="/login/userlogin">
            <div class="name">
                <label>用户账号：</label>
                @*<input type="text" name="name" class="form-control" value="" /><span class="input-group-addon"><i class="fa fa-pencil"></i></span>*@
                <input type="text" class="required" name="userName" id="txtName" placeholder="请输入邮箱或电话号码" tabindex="1" autocomplete="off" /><span style="color:red" id="errorMsg"></span>
            </div>
            <div class="password">
                <label>密&emsp;&emsp;码：</label>
                <input type="password" name="userPwd" placeholder="请输入密码" id="txtPwd" maxlength="16" tabindex="2"/>
            </div>
            <div class="code">
                <label>验&ensp;证&ensp;码：</label>
                <input type="text" placeholder="请输入验证码" name="verifyCode" maxlength="4" id="code" tabindex="3" />
                <div class="codeImg">
                    @*<img src="~/Content/Login/LoginImage/captcha.jpg"  />*@
                    <img src="/Login/SecurityCode" onclick="this.src = this.src+'?'" id="codeImg" />
                </div>
            </div>
            <div class="remember">
            <input type="checkbox" id="remember" tabindex="4">
            <label>记住密码</label>
        </div>
        <div class="login">
            <button type="submit" id="formLogin" tabindex="5">登录</button>
        </div>
        </form>
